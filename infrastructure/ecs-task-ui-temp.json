{
  "family": "sba-loan-ui",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::696923547392:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "sba-loan-ui",
      "image": "696923547392.dkr.ecr.ap-south-2.amazonaws.com/sba-streamlit:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8501,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "API_URL",
          "value": "http://sba-loan-alb-119993538.ap-south-2.elb.amazonaws.com/api"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/sba-credit-risk",
          "awslogs-region": "ap-south-2",
          "awslogs-stream-prefix": "ui"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "python -c \"import requests; requests.get('http://localhost:8501/_stcore/health', timeout=5)\" || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}
